<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AssetLedger" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Include colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="backgroundColor">@color/backgroundColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/CustomToolbar</item>

        <!--        <item name="recyclerViewStyle">@style/CustomRecyclerView</item>-->
        <item name="android:textViewStyle">@style/CustomTextView</item>
        <item name="cardViewStyle">@style/CustomCardView</item>
    </style>

    <!-- Custom Toolbar style -->
    <style name="CustomToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@color/black</item>
        <!-- Customize other toolbar attributes as needed -->
    </style>

    <style name="CustomCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">15dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CustomRecyclerView">
        <item name="backgroundColor">@color/backgroundColor</item>
    </style>

    <style name="CustomTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textColor">#FF000000</item>
    </style>

    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
    </style>
</resources>
