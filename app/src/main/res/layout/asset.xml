<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <ImageView
           android:id="@+id/assetImageView"
           android:layout_width="100dp"
           android:layout_height="100dp"

           app:layout_constraintStart_toStartOf="parent"
            />
       <TextView
           android:id="@+id/assetName"
           android:text="Test name"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"

           app:layout_constraintStart_toEndOf="@id/assetImageView"
           />
       <TextView
           android:id="@+id/assetEmployeeName"
           android:text="Test name"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:layout_constraintStart_toEndOf="@id/assetImageView"
           app:layout_constraintTop_toBottomOf="@id/assetName"
           />
       <TextView
           android:id="@+id/assetLocation"
           android:text="Test name"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:layout_constraintStart_toEndOf="@id/assetImageView"
           app:layout_constraintTop_toBottomOf="@id/assetEmployeeName"
           />
       <TextView
           android:id="@+id/assetCreationDateTime"
           android:text="Test name"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:layout_constraintStart_toEndOf="@id/assetImageView"
           app:layout_constraintTop_toBottomOf="@id/assetLocation"
           />
   </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>