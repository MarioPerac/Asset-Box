<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AssetLedger" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FEBB00</item>
        <item name="colorPrimaryVariant">#fe9900</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#42A5F5</item>
        <item name="colorSecondaryVariant">#1976D2</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="android:windowBackground">#E3F2FD</item>
        <item name="backgroundColor">#E3F2FD</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/CustomToolbar</item>

        <!--        <item name="recyclerViewStyle">@style/CustomRecyclerView</item>-->
        <item name="android:textViewStyle">@style/CustomTextView</item>
        <item name="cardViewStyle">@style/CustomCardView</item>
    </style>

    <!-- Custom Toolbar style -->
    <style name="CustomToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@color/black</item>
        <!-- Customize other toolbar attributes as needed -->
    </style>

    <style name="CustomCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">15dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CustomRecyclerView">
        <item name="backgroundColor">#E3F2FD</item>

    </style>

    <style name="CustomTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/small_text</item>
        <item name="color">@color/black</item>
    </style>

    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
    </style>
</resources>