<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    tools:context=".ui.assets.AssetsFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/assets_list"
        android:name="org.unibl.etf.mr.assetledger.ui.assets.AssetsFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="LinearLayoutManager"
        tools:listitem="@layout/fragment_asset" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addAssetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="30pt"
        android:contentDescription="@string/add_asset"
        android:src="@android:drawable/ic_input_add" />

    <TextView
        android:id="@+id/emptyListMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_assets_message"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:visibility="gone" />

</FrameLayout>
